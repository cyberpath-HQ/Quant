---
import Layout from "../layouts/Layout.astro";
import { makeJsonLd } from "@/lib/make-json-ld";
import type { WebPage } from "schema-dts";

const date = new Date();
const json_ld = makeJsonLd<WebPage>({
  "@type": "WebPage",
  "@context": "https://schema.org",
  "@id": "https://cyberpath-hq.com/",
  url: "https://cyberpath-hq.com/",
  name: "CyberPath - Cybersecurity Tools & Resources",
  description:
    "Discover CyberPath's suite of free, open-source cybersecurity tools. Explore our certification database, AI-powered security assistant, and contribute to the community.",
  inLanguage: "en-US",
  author: "CyberPath <support@cyberpath-hq.com>",
  image: {
    "@type": "ImageObject",
    url: "https://cyberpath-hq.com/CyberPath-og.webp",
    width: "1920",
    height: "933",
    description: "CyberPath - Cybersecurity Tools & Resources",
  },
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": "https://cyberpath-hq.com/",
  },
  datePublished: `${date.getFullYear()}-${date.getMonth() + 1}-${date.getDate()}`,
  dateModified: `${date.getFullYear()}-${date.getMonth() + 1}-${date.getDate()}`,
  publisher: {
    "@type": "Person",
    name: "CyberPath",
    email: "support@cyberpath-hq.com",
  },
});
---

<Layout
  JSON_LD={json_ld}
  seo={{
    title: "CyberPath - Cybersecurity Tools & Resources",
    canonical: "https://cyberpath-hq.com/",
    description:
      "Discover CyberPath's suite of free, open-source cybersecurity tools. Explore our certification database, AI-powered security assistant, and contribute to the community.",
    openGraph: {
      url: "https://cyberpath-hq.com/",
      title: "CyberPath - Cybersecurity Tools & Resources",
      description:
        "Discover CyberPath's suite of free, open-source cybersecurity tools. Explore our certification database, AI-powered security assistant, and contribute to the community.",
      site_name: "CyberPath",
      images: [
        {
          url: "https://cyberpath-hq.com/CyberPath-og.webp",
          width: 1920,
          height: 933,
          alt: "CyberPath - Cybersecurity Tools & Resources",
        },
      ],
    },
    additionalMetaTags: [
      {
        name: "keywords",
        content: "cybersecurity, open source, certifications, AI assistant, security tools, CertDb, Orbis",
      },
    ],
    twitter: {
      cardType: "summary_large_image",
      handle: "@cyberpath_hq",
      site: "@cyberpath_hq",
    },
  }}
>
  TODO: Home Page Content
</Layout>
